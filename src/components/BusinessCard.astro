---
import { Image } from 'astro:assets';
import Card from '../assets/card.png';

interface Props {
  name: string;
  romaji: string;
  keyword: string;
}

const { name, romaji, keyword } = Astro.props;
---

<!-- このデザインから一切動かすな -->

<div class="relative w-auto h-auto font-sans overflow-visible flex justify-center items-center">
  <!-- 背景として画像を直接表示 -->
  <Image src={Card} alt="名刺背景" class="block w-auto h-auto max-w-[120px] max-h-[180px]" />
  <div class="absolute top-0 left-0 w-full h-full flex flex-col justify-center items-center p-2 box-border text-center">
    <div class="w-full text-center mt-0">
      <p class="text-[0.4rem] m-0 mb-1 font-normal text-black">神山まるごと高専</p>
      <h1 class="text-base m-1 mx-auto tracking-wider text-black leading-tight text-center">{name}</h1>
      <p class="text-[0.4rem] m-1 mt-0 mx-auto tracking-wider text-black text-center w-full">{romaji}</p>
    </div>
    
    <div class="text-center mt-4 mb-0">
      <p class="text-[0.5rem] text-black tracking-wider mb-1">Key Word</p>
      <p class="text-[0.5rem] font-bold m-0 mx-auto text-black tracking-wide break-keep whitespace-nowrap overflow-hidden text-center">#{keyword}</p>
    </div>
  </div>
</div>